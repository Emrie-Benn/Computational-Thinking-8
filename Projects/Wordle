import random

# Pick a word at random
word_list = ["segue","slack","flick","mouse","buggy"]
hidden_word = random.choice(word_list)

#repeat six times
for i in range(6):
    #guess a word
    guess_word = input()
    output = ""

    #First letter aka (0)
    if guess_word[0] == hidden_word[0]:
        output += "ğŸŸ©"
    elif guess_word[0] in hidden_word[0]:
        output += "ğŸŸ¨"
    else:
        output += "â¬›"

    #Second letter aka (1)
    if guess_word[1] == hidden_word[1]:
        output += "ğŸŸ©"
    elif guess_word[1] in hidden_word[1]:
        output += "ğŸŸ¨"
    else:
        output += "â¬›"

    #Third letter aka (2)
    if guess_word[2] == hidden_word[2]:
        output += "ğŸŸ©"
    elif guess_word[2] in hidden_word[2]:
        output += "ğŸŸ¨"
    else:
        output += "â¬›"

    #Fourth letter aka (3)
    if guess_word[3] == hidden_word[3]:
        output += "ğŸŸ©"
    elif guess_word[3] in hidden_word[3]:
        output += "ğŸŸ¨"
    else:
        output += "â¬›"
    
    #Fifth letter aka (4)
    if guess_word[4] == hidden_word[4]:
        output += "ğŸŸ©"
    elif guess_word[4] in hidden_word[4]:
        output += "ğŸŸ¨"
    else:
        output += "â¬›"


    #result
    print(output)
    if output == "ğŸŸ©ğŸŸ©ğŸŸ©ğŸŸ©ğŸŸ©":
        print ("You win")

print (f"You used {i+1} guesses")